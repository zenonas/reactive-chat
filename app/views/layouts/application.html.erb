<!DOCTYPE html>
<html>
<head>
  <title>ReactiveChat</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="wrapper">
      <div class="box">
          <div class="row">
              <!-- sidebar -->
              <div class="column col-sm-2" id="sidebar">
                  <a class="logo" href="#">R</a>
                  <ul class="nav">
                    <li>
                      <%= link_to 'All Channels', channels_path %>
                    </li>
                    <li>
                      <%= link_to 'New Channel', new_channel_path %>
                    </li>
                  </ul>
                  <ul class="nav hidden-xs" id="sidebar-footer">
                    <% if user_signed_in? %>
                      <li>
                        <a href='#'><%= current_user.email %></a>
                      </li>
                      <li>
                        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                      </li>
                    <% end -%>
                  </ul>
              </div>
              <!-- /sidebar -->

              <!-- main -->
              <div class="column col-sm-10" id="main">
                  <div class="padding">
                      <div class="full col-sm-9">

                        <% flash.each do |name, msg| %>
                          <div class='col-sm-12'>
                            <div class="alert">
                              <button class="close" data-dismiss="alert">&times;</button>
                              <%= msg %>
                            </div>
                          </div>
                        <% end %>

                        <%= yield %>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</body>
</html>
